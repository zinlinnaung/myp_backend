generator client {
  provider = "prisma-client-js"
  output   = "../../../generated/auth"
}

datasource db {
  provider = "postgresql"
  url      = env("AUTH_DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  username      String         @unique
  password      String?
  firstName     String?        @map("first_name")
  lastName      String?        @map("last_name")
  isActive      Boolean        @default(true) @map("is_active")
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")
  phone         String?        @unique
  googleId      String?        @unique @map("google_id")
  city          String?
  country       String?
  dateOfBirth   DateTime?      @map("date_of_birth")
  feedback      String?
  gender        String?
  township      String?
  otpSessions   OtpSession[]
  refreshTokens RefreshToken[]
  Instructor    Instructor[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  isRevoked Boolean  @default(false) @map("is_revoked")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

model Instructor {
  id     String @id @default(uuid())
  userId String @unique @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // From the UI: "Full Name" is handled by User model or stored here if preferred
  fullName String  @map("full_name")
  bio      String?

  // Many-to-many relationship with roles
  roles Role[] @relation("InstructorRoles")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("instructors")
}

model Role {
  id          String  @id @default(uuid())
  name        String  @unique // e.g., "Admin", "Instructor", "Assistant"
  description String? // From the "Role Description" field in UI

  // Permissions stored as an array of Enums
  permissions Permission[]

  instructors Instructor[] @relation("InstructorRoles")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("roles")
}

enum Permission {
  // Students
  CREATE_STUDENT
  EDIT_STUDENT
  DELETE_STUDENT
  VIEW_STUDENT

  // Instructors
  CREATE_INSTRUCTOR
  EDIT_INSTRUCTOR
  DELETE_INSTRUCTOR
  VIEW_INSTRUCTOR

  // Courses
  CREATE_COURSE
  EDIT_COURSE
  DELETE_COURSE
  VIEW_COURSE
}

model OtpSession {
  id                 String    @id @default(uuid())
  phone              String?   @map("phone")
  email              String?   @map("email")
  transId            String    @unique @map("trans_id")
  userId             String?   @map("user_id")
  otpCode            String?   @map("otp_code")
  service            String    @default("login_otp")
  app                String    @default("myp")
  isVerified         Boolean   @default(false) @map("is_verified")
  expiresAt          DateTime  @map("expires_at")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")
  attempt_count      Int       @default(0)
  delivery_status    String    @default("pending")
  last_attempt_at    DateTime?
  sms_poh_message_id String?
  user               User?     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([phone])
  @@index([email])
  @@index([transId])
  @@index([delivery_status])
  @@map("otp_sessions")
}
