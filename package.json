{
  "name": "nyp_admin_backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate:auth": "prisma generate --schema=src/prisma/auth/schema.prisma",
    "prisma:generate:user": "prisma generate --schema=src/prisma/user/schema.prisma",
    "prisma:generate:course": "prisma generate --schema=src/prisma/course/schema.prisma",
    "prisma:generate:all": "npm run prisma:generate:auth && npm run prisma:generate:user && npm run prisma:generate:course",
    "prisma:migrate:auth": "prisma migrate dev --schema=src/prisma/auth/schema.prisma",
    "prisma:migrate:user": "prisma migrate dev --schema=src/prisma/user/schema.prisma",
    "prisma:migrate:course": "prisma migrate dev --schema=src/prisma/course/schema.prisma",
    "prisma:migrate:all": "npm run prisma:migrate:auth && npm run prisma:migrate:user && npm run prisma:migrate:course"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/swagger": "^11.2.3",
    "@prisma/client": "5.14.0",
    "adm-zip": "^0.5.16",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "minio": "^8.0.6",
    "multer": "^2.0.2",
    "prisma": "5.14.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "unzipper": "^0.12.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/adm-zip": "^0.5.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
